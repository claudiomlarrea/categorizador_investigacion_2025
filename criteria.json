{
  "sections": {
    "Formación académica y complementaria": {
      "max_points": 580,
      "items": {
        "Doctorado": {
          "pattern": "(Doctorado\\b|Doctor en\\b|Doctor de la Universidad\\b)[\\s\\S]{0,200}?Año de finalización:\\s*(19\\d{2}|20\\d{2})",
          "unit_points": 300,
          "max_points": 300
        },
        "Maestría": {
          "pattern": "(Maestr[ií]a\\b|Mag[ií]ster\\b)[\\s\\S]{0,200}?Año de finalización:\\s*(19\\d{2}|20\\d{2})(?![\\s\\S]{0,40}?Actualidad)",
          "unit_points": 180,
          "max_points": 180
        },
        "Especialización": {
          "pattern": "Especializaci[oó]n\\b[\\s\\S]{0,200}?Año de finalización:\\s*(19\\d{2}|20\\d{2})(?![\\s\\S]{0,40}?Actualidad)",
          "unit_points": 100,
          "max_points": 100
        },
        "Títulos de grado (Licenciatura)": {
          "pattern": "(Licenciado en\\b|Licenciatura en\\b|Abogado/a?\\b|Abogada\\b|Abogado\\b|M[eé]dica Veterinaria\\b|M[eé]dico/a?\\b|Contador/a?\\b|Ingeniero/a?\\b|Arquitecto/a?\\b)[\\s\\S]{0,200}?Año de finalización:\\s*(19\\d{2}|20\\d{2}|\\d{2}/\\d{4})",
          "unit_points": 40,
          "max_points": 40
        },
        "Profesorados universitarios": {
          "pattern": "(Docente Universitario\\b|Profesorado\\b|Profesor en\\b)[\\s\\S]{0,200}?Año de finalización:\\s*(19\\d{2}|20\\d{2}|\\d{2}/\\d{4})",
          "unit_points": 40,
          "max_points": 40
        },
        "Cursos y diplomaturas de posgrado": {
          "pattern": "(Diplomatura\\b|Diplomado\\b|Curso\\b|Programa de Formación\\b|Actualización\\b)[\\s\\S]{0,120}?(Hasta 24 horas|Entre\\s*25\\s*Y\\s*50\\s*horas|Entre\\s*51\\s*Y\\s*100\\s*horas|Entre\\s*101\\s*Y\\s*200\\s*horas)",
          "unit_points": 5,
          "max_points": 40
        },
        "Certificados de idiomas": {
          "pattern": "(Ingl[eé]s|Franc[eé]s|Portugu[eé]s|Italiano|Alem[aá]n|Chino|Japon[eé]s)[\\s\\S]{0,80}?(nivel|IELTS|DELF|First Certificate|certificaci[oó]n)",
          "unit_points": 10,
          "max_points": 20
        }
      }
    },

    "Producción científica": {
      "max_points": 470,
      "items": {
        "Artículos en revistas con referato": {
          "pattern": "(?i)(?:^|\\n)\\s*[^\\n]{0,180}?\\\"[^\\n\\\"]{10,240}\\\"\\.?\\s+[^\\n]{0,120}?,\\s*[^\\n]{0,120}?\\((19\\d{2}|20\\d{2})\\)\\s*:\\s*[^\\n]*",
          "unit_points": 40,
          "max_points": 320
        },
        "Trabajos en libros de resúmenes y congresos": {
          "pattern": "(?i)(?:^|\\n)\\s*[^\\n]{0,240}?\\s+En\\s+(?:Actas|ACTA|Libro\\s+Actas|Libro\\s+de\\s+resumen(?:es)?|International|Congreso|Jornadas|Symposium|Meeting|World|Eurolept|VETPATH|Mundo\\s+Sano|AAVLD|AAZ)\\b[^\\n]{0,240}?(19\\d{2}|20\\d{2})",
          "unit_points": 5,
          "max_points": 120
        },
        "Capítulos de libro o informes institucionales": {
          "pattern": "(?i)(?:^|\\n)\\s*[^\\n]{0,240}?(Cap[ií]tulos?\\b|Cap[ií]tulo\\s+de\\s+libro\\b|ISBN\\s*:|ISBN\\b)[^\\n]{0,240}",
          "unit_points": 30,
          "max_points": 120
        },
        "Tesis (NO cuenta como publicación)": {
          "pattern": "(?i)(?:^|\\n)\\s*Tesis\\s+de\\s+(?:maestr[ií]a|grado|doctorado)\\s*:",
          "unit_points": 0,
          "max_points": 0
        }
      }
    },

    "Formación de recursos humanos": {
      "max_points": 640,
      "items": {
        "Dirección de becas (Doctorado/Posdoctorado)": {
          "pattern": "(?i)Direcci[oó]n\\s+de\\s+beca\\b",
          "unit_points": 60,
          "max_points": 240
        },
        "Co-dirección de becas (Doctorado/Posdoctorado)": {
          "pattern": "(?i)Co-?direcci[oó]n\\s+de\\s+beca\\b",
          "unit_points": 40,
          "max_points": 160
        },
        "Dirección de tesis de Doctorado": {
          "pattern": "(?i)Direcci[oó]n\\s+de\\s+Tesis\\s+de\\s+Doctorado\\b",
          "unit_points": 120,
          "max_points": 360
        },
        "Co-dirección de tesis de Doctorado": {
          "pattern": "(?i)Co-?direcci[oó]n\\s+de\\s+Tesis\\s+de\\s+Doctorado\\b",
          "unit_points": 80,
          "max_points": 240
        },
        "Dirección de tesinas y trabajos finales": {
          "pattern": "(?i)Direcci[oó]n\\s+de\\s+(?:Tesina|Trabajo\\s+final|Trabajo\\s+Final)\\b",
          "unit_points": 10,
          "max_points": 120
        }
      }
    },

    "Financiamiento CyT y Proyectos": {
      "max_points": 540,
      "items": {
        "Director de proyecto financiado": {
          "pattern": "(?i)Directora?\\s+en\\s+el\\s+Proyecto\\s+de\\s+I\\+D\\b|Directora?\\s+del\\s+Proyecto\\s+PICT\\b|Directora?\\s+del\\s+Proyecto\\s+de\\s+I\\+D\\b",
          "unit_points": 120,
          "max_points": 360
        },
        "Co-director de proyecto financiado": {
          "pattern": "(?i)Co-?directora?\\s+en\\s+el\\s+Proyecto\\s+de\\s+I\\+D\\b|Co-?directora?\\s+del\\s+Proyecto\\s+de\\s+I\\+D\\b",
          "unit_points": 80,
          "max_points": 240
        },
        "Investigador en proyecto financiado": {
          "pattern": "(?i)Investigadora?\\s+en\\s+el\\s+Proyecto\\s+de\\s+I\\+D\\b|Investigador\\s+responsable\\b",
          "unit_points": 40,
          "max_points": 200
        },
        "Estancias de I+D": {
          "pattern": "(?i)Estancia\\s+de\\s+I\\+D\\b",
          "unit_points": 30,
          "max_points": 120
        }
      }
    },

    "Actividades de evaluación y gestión editorial": {
      "max_points": 650,
      "items": {
        "Miembro de comité o consejo de investigación": {
          "pattern": "(?i)(Comit[eé]\\s+de\\s+Investigaci[oó]n|Consejo\\s+de\\s+Investigaci[oó]n|Miembro\\s+Comit[eé]\\s+de\\s+Investigaci[oó]n)\\b",
          "unit_points": 20,
          "max_points": 120
        },
        "Evaluación de trabajos en revistas": {
          "pattern": "(?i)Evaluaci[oó]n\\s+de\\s+trabajos\\s+en\\s+revistas\\b",
          "unit_points": 10,
          "max_points": 120
        },
        "Jurado de tesis/tesinas/concursos": {
          "pattern": "(?i)Jurado\\s+de\\s+(?:tesinas|trabajos\\s+finales|tesis|concursos)\\b",
          "unit_points": 10,
          "max_points": 120
        },
        "Evaluación y acreditación de carreras (CONEAU)": {
          "pattern": "(?i)(CONEAU|Evaluaci[oó]n\\s+y/o\\s+acreditaci[oó]n\\s+de\\s+carreras|Acreditaci[oó]n\\s+de\\s+Especializaci[oó]n)\\b",
          "unit_points": 40,
          "max_points": 200
        }
      }
    },

    "Participación en eventos CyT y actividades profesionales": {
      "max_points": 470,
      "items": {
        "Participación en eventos académicos": {
          "pattern": "(?i)Participaci[oó]n\\s+en\\s+eventos\\s+CyT|Evento\\s*:\\s*|Presentado\\s+en\\s+el\\s+evento",
          "unit_points": 5,
          "max_points": 120
        },
        "Cargo profesional relevante": {
          "pattern": "(?i)(Coordinadora?\\b|Directora?\\b|Jefe\\s+de\\b|Jefe\\s+de\\s+Subprograma\\b|Coordinador\\s+Proyecto\\b|Director\\s+de\\s+Carrera\\b|Secretari[ao]\\b)\\s",
          "unit_points": 20,
          "max_points": 80
        }
      }
    },

    "Otros antecedentes CyT": {
      "max_points": 200,
      "items": {
        "Membresías académicas o profesionales": {
          "pattern": "(?i)Membres[ií]as?\\s+en\\s+asociaciones|Miembro\\s+del\\s+Comit[eé]\\s+Ejecutivo|Comit[eé]\\s+Editorial|Integrante\\s+de\\s+la\\s+Red\\b|Red\\s+Nacional\\b|OPS/OMS",
          "unit_points": 10,
          "max_points": 80
        },
        "Gestión universitaria o pública": {
          "pattern": "(?i)(Gobierno\\s+de\\s+la\\s+Provincia|Ministerio|Universidad\\s+Cat[oó]lica\\s+de\\s+Cuyo|INTA|Instituto\\s+de\\s+Patobiolog[ií]a)\\b[\\s\\S]{0,120}?(Secretari[ao]|Director/a?|Coordinador/a?)",
          "unit_points": 20,
          "max_points": 100
        }
      }
    }
  },

  "categorias": {
    "I": {
      "min_points": 1800,
      "descripcion": "Investigador con trayectoria sobresaliente, liderazgo consolidado, producción científica de alto impacto, dirección de proyectos y formación de recursos humanos avanzada."
    },
    "II": {
      "min_points": 1200,
      "descripcion": "Investigador con producción muy sólida, participación y dirección en proyectos, contribuciones significativas y formación de recursos humanos."
    },
    "III": {
      "min_points": 700,
      "descripcion": "Investigador en consolidación, con producción continua, participación activa en investigación y primeras experiencias de liderazgo."
    },
    "IV": {
      "min_points": 350,
      "descripcion": "Investigador en etapa inicial, con producción moderada y participación en proyectos y eventos científicos."
    },
    "V": {
      "min_points": 1,
      "descripcion": "Investigador novel, con primeros antecedentes científicos o participación incipiente en actividades de investigación."
    },
    "VI": {
      "min_points": 0,
      "descripcion": "Sin antecedentes de investigación o con trayectoria aún no registrada."
    }
  }
}
