{
  "meta": {
    "schema_version": "2.0",
    "engine_assumptions": {
      "regex_flags_default": "is",
      "counting": "count_each_match_then_cap_by_item_max_then_cap_by_section_max",
      "note": "Patterns are anchored to CVar headings/phrases to minimize cross-section inflation."
    }
  },
  "sections": {
    "Formación académica y complementaria": {
      "max_points": 580,
      "items": {
        "Doctorado (finalizado)": {
          "pattern": "(?is)(?:^|\\n)\\s*FORMACI[OÓ]N\\s+ACAD[ÉE]MICA[\\s\\S]{0,2000}?(?:\\n\\s*)?(?:Doctorado\\b|Doctor\\s+en\\b|Doctor\\s+de\\s+la\\s+Universidad\\b)[\\s\\S]{0,400}?(?:Año\\s+de\\s+finalizaci[oó]n:\\s*(?:19\\d{2}|20\\d{2})|\\b(19\\d{2}|20\\d{2})\\s*-\\s*(19\\d{2}|20\\d{2})\\b)(?![\\s\\S]{0,120}?Actualidad)",
          "unit_points": 300,
          "max_points": 300
        },
        "Maestría (finalizada)": {
          "pattern": "(?is)(?:^|\\n)\\s*FORMACI[OÓ]N\\s+ACAD[ÉE]MICA[\\s\\S]{0,2000}?(?:Maestr[ií]a\\b|Mag[ií]ster\\b)[\\s\\S]{0,400}?(?:Año\\s+de\\s+finalizaci[oó]n:\\s*(?:19\\d{2}|20\\d{2})|\\b(19\\d{2}|20\\d{2})\\s*-\\s*(19\\d{2}|20\\d{2})\\b)(?![\\s\\S]{0,120}?Actualidad)",
          "unit_points": 180,
          "max_points": 180
        },
        "Especialización (finalizada)": {
          "pattern": "(?is)(?:^|\\n)\\s*FORMACI[OÓ]N\\s+ACAD[ÉE]MICA[\\s\\S]{0,2000}?Especializaci[oó]n\\b[\\s\\S]{0,400}?(?:Año\\s+de\\s+finalizaci[oó]n:\\s*(?:19\\d{2}|20\\d{2})|\\b(19\\d{2}|20\\d{2})\\s*-\\s*(19\\d{2}|20\\d{2})\\b)(?![\\s\\S]{0,120}?Actualidad)",
          "unit_points": 100,
          "max_points": 100
        },
        "Título de grado (finalizado)": {
          "pattern": "(?is)(?:^|\\n)\\s*FORMACI[OÓ]N\\s+ACAD[ÉE]MICA[\\s\\S]{0,2500}?(?:\\n\\s*)?(?:Licenciado\\s+en\\b|Licenciatura\\s+en\\b|Abogado\\b|Abogada\\b|M[eé]dic[oa]\\b|M[eé]dica\\s+Veterinaria\\b|Veterinari[oa]\\b|Bioqu[ií]mic[oa]\\b|Contador\\b|Contadora\\b|Ingenier[oa]\\b|Arquitect[oa]\\b)[\\s\\S]{0,400}?(?:Año\\s+de\\s+finalizaci[oó]n:\\s*(?:19\\d{2}|20\\d{2}|\\d{2}/\\d{4})|\\b(19\\d{2}|20\\d{2})\\s*-\\s*(19\\d{2}|20\\d{2})\\b)",
          "unit_points": 40,
          "max_points": 40
        },
        "Profesorado/Docencia universitaria (finalizado)": {
          "pattern": "(?is)(?:^|\\n)\\s*FORMACI[OÓ]N\\s+ACAD[ÉE]MICA[\\s\\S]{0,2000}?(?:Docente\\s+Universitario\\b|Profesorado\\b|Profesor\\s+en\\b|Profesor\\s+Universitari[oa]\\b)[\\s\\S]{0,400}?(?:Año\\s+de\\s+finalizaci[oó]n:\\s*(?:19\\d{2}|20\\d{2}|\\d{2}/\\d{4})|\\b(19\\d{2}|20\\d{2})\\s*-\\s*(19\\d{2}|20\\d{2})\\b)(?![\\s\\S]{0,120}?Actualidad)",
          "unit_points": 40,
          "max_points": 40
        },
        "Cursos y diplomaturas (posgrado / actualización)": {
          "pattern": "(?is)(?:^|\\n)\\s*FORMACI[OÓ]N\\s+COMPLEMENTARIA[\\s\\S]{0,4000}?(?:\\n\\s*)?(?:19\\d{2}|20\\d{2})\\s*-\\s*(?:19\\d{2}|20\\d{2})\\s+\"[^\"]{5,180}\"\\.[\\s\\S]{0,260}?(?:Hasta\\s*24\\s*horas|Entre\\s*25\\s*Y\\s*50\\s*horas|Entre\\s*51\\s*Y\\s*100\\s*horas|Entre\\s*101\\s*Y\\s*200\\s*horas)",
          "unit_points": 5,
          "max_points": 40
        },
        "Idiomas (certificación / nivel)": {
          "pattern": "(?is)(?:^|\\n)\\s*(?:Ingl[eé]s|Franc[eé]s|Portugu[eé]s|Italiano|Alem[aá]n|Chino|Japon[eé]s)\\s*\\[[^\\]]{0,40}nivel[^\\]]{0,40}\\][^\\n]{0,120}(?:IELTS|DELF|First\\s+Certificate|certificaci[oó]n|\\(\\d{4}\\))?",
          "unit_points": 10,
          "max_points": 20
        }
      }
    },
    "Producción científica": {
      "max_points": 470,
      "items": {
        "Artículos en revistas (sección Artículos)": {
          "pattern": "(?is)\\n\\s*PUBLICACIONES\\s*[\\s\\S]{0,2000}?\\n\\s*Art[ií]culos\\s*\\n[\\s\\S]{0,2000}?(?:\\n\\s*[A-ZÁÉÍÓÚÜÑa-záéíóúüñ].{0,260}?\\\".{10,260}?\\\"\\.?\\s+[^\\n]{2,180}?,\\s*[^\\n]{0,120}?\\((?:19\\d{2}|20\\d{2})\\)\\s*:\\s*[^\\n]{0,260})",
          "unit_points": 40,
          "max_points": 320
        },
        "Artículos con DOI explícito": {
          "pattern": "(?is)\\bdoi\\s*:\\s*10\\.[0-9]{4,9}/[^\\s\\)\\]]+",
          "unit_points": 40,
          "max_points": 80
        },
        "Libros/capítulos/ISBN (no artículos)": {
          "pattern": "(?is)\\n\\s*PUBLICACIONES\\s*[\\s\\S]{0,4000}?(?:\\n\\s*Libros,\\s*cap[ií]tulos\\s+y\\s*trabajos\\s+en\\s+eventos\\b[\\s\\S]{0,3000}?\\bISBN\\s*:?\\s*[0-9\\-]{10,20})",
          "unit_points": 30,
          "max_points": 120
        },
        "Trabajos en eventos (formato En/Actas/Meeting)": {
          "pattern": "(?is)(?:^|\\n)\\s*[^\\n]{0,260}?\\bEn\\s+(?:ACTA|Actas|Libro\\s+Actas|Libro\\s+de\\s+Actas|Libro\\s+de\\s+resumen(?:es)?|Congreso|Jornadas|Symposium|Meeting|World|Eurolept|VETPATH|Mundo\\s+Sano|AAVLD|AAZ)\\b[^\\n]{0,260}?(?:19\\d{2}|20\\d{2})\\b",
          "unit_points": 5,
          "max_points": 120
        },
        "Tesis (no puntúa como publicación)": {
          "pattern": "(?is)(?:^|\\n)\\s*Tesis\\s+de\\s+(?:maestr[ií]a|grado|doctorado)\\s*\\:",
          "unit_points": 0,
          "max_points": 0
        }
      }
    },
    "Formación de recursos humanos": {
      "max_points": 640,
      "items": {
        "Dirección de beca (posgrado/doctorado/posdoc)": {
          "pattern": "(?is)\\n\\s*Formaci[oó]n\\s+de\\s+recursos\\s+humanos\\b[\\s\\S]{0,2500}?\\bDirecci[oó]n\\s+de\\s+beca\\b",
          "unit_points": 60,
          "max_points": 240
        },
        "Co-dirección de beca": {
          "pattern": "(?is)\\n\\s*Formaci[oó]n\\s+de\\s+recursos\\s+humanos\\b[\\s\\S]{0,2500}?\\bCo-?direcci[oó]n\\s+de\\s+beca\\b",
          "unit_points": 40,
          "max_points": 160
        },
        "Dirección de tesis de Doctorado": {
          "pattern": "(?is)\\n\\s*Formaci[oó]n\\s+de\\s+recursos\\s+humanos\\b[\\s\\S]{0,2500}?\\bDirecci[oó]n\\s+de\\s+Tesis\\s+de\\s+Doctorado\\b",
          "unit_points": 120,
          "max_points": 360
        },
        "Co-dirección de tesis de Doctorado": {
          "pattern": "(?is)\\n\\s*Formaci[oó]n\\s+de\\s+recursos\\s+humanos\\b[\\s\\S]{0,2500}?\\bCo-?direcci[oó]n\\s+de\\s+Tesis\\s+de\\s+Doctorado\\b",
          "unit_points": 80,
          "max_points": 240
        },
        "Dirección de tesina/trabajo final (grado/maestría)": {
          "pattern": "(?is)\\n\\s*Formaci[oó]n\\s+de\\s+recursos\\s+humanos\\b[\\s\\S]{0,2500}?\\bDirecci[oó]n\\s+de\\s+(?:Tesina|Trabajo\\s+final|Trabajo\\s+Final)\\b",
          "unit_points": 10,
          "max_points": 120
        }
      }
    },
    "Financiamiento CyT y Proyectos": {
      "max_points": 540,
      "items": {
        "Dirección de proyecto financiado (PICT/Proyecto I+D)": {
          "pattern": "(?is)\\n\\s*Financiamiento\\s+CyT\\b[\\s\\S]{0,3000}?(?:\\bDirectora?\\b[^\\n]{0,120}?\\bProyecto\\s+de\\s+I\\+D\\b|\\bDirectora?\\b[^\\n]{0,120}?\\bPICT\\b|\\bDirectora?\\b[^\\n]{0,120}?\\bProyecto\\b[^\\n]{0,120}?\\bFinanciado\\b)",
          "unit_points": 120,
          "max_points": 360
        },
        "Co-dirección de proyecto financiado": {
          "pattern": "(?is)\\n\\s*Financiamiento\\s+CyT\\b[\\s\\S]{0,3000}?\\bCo-?directora?\\b[^\\n]{0,180}?\\bProyecto\\s+de\\s+I\\+D\\b",
          "unit_points": 80,
          "max_points": 240
        },
        "Investigador/a en proyecto financiado (participación/IR)": {
          "pattern": "(?is)(?:\\n\\s*Financiamiento\\s+CyT\\b[\\s\\S]{0,3000}?\\bInvestigadora?\\b[^\\n]{0,160}?\\bProyecto\\s+de\\s+I\\+D\\b|\\bInvestigador\\s+responsable\\b)",
          "unit_points": 40,
          "max_points": 200
        },
        "Estancia de I+D": {
          "pattern": "(?is)\\bEstancia\\s+de\\s+I\\+D\\b",
          "unit_points": 30,
          "max_points": 120
        }
      }
    },
    "Actividades de evaluación y gestión editorial": {
      "max_points": 650,
      "items": {
        "Miembro comité/consejo de investigación": {
          "pattern": "(?is)\\b(?:Miembro\\s+Comit[eé]\\s+de\\s+Investigaci[oó]n|Comit[eé]\\s+de\\s+Investigaci[oó]n|Consejo\\s+de\\s+Investigaci[oó]n|Miembro\\s+Consejo\\s+de\\s+Investigaci[oó]n)\\b",
          "unit_points": 20,
          "max_points": 120
        },
        "Evaluación de trabajos en revistas (revisor)": {
          "pattern": "(?is)\\bEvaluaci[oó]n\\s+de\\s+trabajos\\s+en\\s+revistas\\b",
          "unit_points": 10,
          "max_points": 120
        },
        "Jurado de tesis/tesinas/concursos docentes": {
          "pattern": "(?is)\\bJurado\\s+de\\s+(?:tesinas|trabajos\\s+finales|tesis|concursos\\s+docentes|concursos)\\b",
          "unit_points": 10,
          "max_points": 120
        },
        "Evaluación/acreditación de carreras (CONEAU)": {
          "pattern": "(?is)\\b(?:CONEAU|Evaluaci[oó]n\\s+y/o\\s+acreditaci[oó]n\\s+de\\s+carreras|Acreditaci[oó]n\\s+de\\s+Especializaci[oó]n)\\b",
          "unit_points": 40,
          "max_points": 200
        }
      }
    },
    "Participación en eventos CyT y actividades profesionales": {
      "max_points": 470,
      "items": {
        "Participación en eventos CyT (sección específica)": {
          "pattern": "(?is)\\n\\s*Participaci[oó]n\\s+en\\s+eventos\\s+CyT\\b[\\s\\S]{0,2500}?(?:\\n\\s*\\d{4}\\s*-\\s*Evento\\s*:\\s*\\\"[^\\n\\\"]{5,240}\\\"\\.|\\bPresentado\\s+en\\s+el\\s+evento\\b)",
          "unit_points": 5,
          "max_points": 120
        },
        "Cargo profesional relevante (ANTECEDENTES EN CyT)": {
          "pattern": "(?is)\\n\\s*ANTECEDENTES\\s+EN\\s+CYT\\b[\\s\\S]{0,4000}?(?:\\n\\s*(?:\\d{2}/\\d{4}|\\d{4})\\s*-\\s*(?:Actualidad|\\d{2}/\\d{4}|\\d{4})\\s*\\n\\s*(?:Coordinadora?|Director/a?|Directora?|Jefe\\s+de\\b|Jefe\\s+de\\s+Subprograma\\b|Secretari[ao]\\b|Coordinador\\b)\\b)",
          "unit_points": 20,
          "max_points": 80
        }
      }
    },
    "Otros antecedentes CyT": {
      "max_points": 200,
      "items": {
        "Membresías / comités editoriales / redes": {
          "pattern": "(?is)\\n\\s*(?:Membres[ií]as\\s+en\\s+asociaciones\\b|Participaci[oó]n\\s+en\\s+redes\\s+tem[aá]ticas\\b|Miembro\\s+del\\s+Comit[eé]\\s+Ejecutivo\\b|Comit[eé]\\s+Editorial\\b|Integrante\\s+de\\s+la\\s+Red\\b|Red\\s+Nacional\\b|OPS/OMS)\\b",
          "unit_points": 10,
          "max_points": 80
        },
        "Gestión universitaria o pública (cargos explícitos)": {
          "pattern": "(?is)\\n\\s*ANTECEDENTES\\s+EN\\s+CYT\\b[\\s\\S]{0,5000}?(?:\\n\\s*(?:\\d{2}/\\d{4}|\\d{4})\\s*-\\s*(?:Actualidad|\\d{2}/\\d{4}|\\d{4})\\s*\\n\\s*(?:Secretari[ao]\\b|Directora?\\b|Coordinadora?\\b|Jefe\\s+de\\b)\\.[^\\n]{0,160}?(?:GOBIERNO\\b|MINISTERIO\\b|UNIVERSIDAD\\b|INTA\\b))",
          "unit_points": 20,
          "max_points": 100
        }
      }
    }
  },
  "categorias": {
    "I": {
      "min_points": 1800,
      "descripcion": "Investigador con trayectoria sobresaliente, liderazgo consolidado, producción científica de alto impacto, dirección de proyectos y formación de recursos humanos avanzada."
    },
    "II": {
      "min_points": 1200,
      "descripcion": "Investigador con producción muy sólida, participación y dirección en proyectos, contribuciones significativas y formación de recursos humanos."
    },
    "III": {
      "min_points": 700,
      "descripcion": "Investigador en consolidación, con producción continua, participación activa en investigación y primeras experiencias de liderazgo."
    },
    "IV": {
      "min_points": 350,
      "descripcion": "Investigador en etapa inicial, con producción moderada y participación en proyectos y eventos científicos."
    },
    "V": {
      "min_points": 1,
      "descripcion": "Investigador novel, con primeros antecedentes científicos o participación incipiente en actividades de investigación."
    },
    "VI": {
      "min_points": 0,
      "descripcion": "Sin antecedentes de investigación o con trayectoria aún no registrada."
    }
  }
}
